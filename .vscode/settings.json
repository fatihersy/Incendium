{
    "window.zoomLevel": 0,
    "files.autoSave": "onFocusChange",
    "workbench.colorTheme": "Oro Theme",
    "workbench.editor.showTabs": "multiple",
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#c03a2bf1"
    },
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "block",
    "editor.tabCompletion": "on",
    "editor.parameterHints.enabled": true,
    "editor.inlayHints.enabled": "off",
    "editor.hover.enabled": true,
    "editor.hover.delay": 800,
    "editor.cursorSmoothCaretAnimation" : "on",
    "editor.cursorBlinking": "smooth",
    "editor.overviewRulerBorder": false,
    "editor.showFoldingControls" :"mouseover",
    "editor.renderWhitespace": "none",
    "editor.quickSuggestionsDelay": 0,
    "editor.fontFamily": "Fira Code Retina",
    "editor.fontSize": 14,
    "editor.fontLigatures": "'cv01', 'cv04', 'cv08', 'ss01', 'zero', 'cv14', 'cv17', 'ss05', 'ss04', 'cv18', 'ss03', 'cv30', 'ss02'",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": []
    },
    "terminal.integrated.fontFamily": "FiraMono Nerd Font",
    "terminal.integrated.defaultProfile.windows": "pwsh7",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "pwsh7": {
            "path": "D:/Program Files/PowerShell/7/pwsh.exe"
        }
    },
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "red",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "HACK:",
            "color": "#ff6600",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "NOTE:",
            "color": "green",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "LABEL:",
            "color": "#B5B8BE",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "INFO:",
            "color": "#f1c40f",
            "backgroundColor": "rgba(0,0,0,0)"
        }
    ],
    "todohighlight.include": [
        "**/*.h",
        "**/*.c"
    ],
    "todohighlight.defaultStyle": {
        "color": "red",
        "backgroundColor": "#ffab00",
        "overviewRulerColor": "rgba(0,0,0,0)",
        "isWholeLine": false,
    },
    "clangd.arguments": [
        "--header-insertion=never",
        "--function-arg-placeholders=0"
    ],
    "files.associations": {
        "darray.h": "c",
        "event.h": "c",
        "fmath.h": "c",
        "fmemory.h": "c",
        "ftime.h": "c",
        "scene_editor.h": "c",
        "scene_in_game.h": "c",
        "scene_main_menu.h": "c",
        "scene_manager.h": "c",
        "ability.h": "c",
        "camera.h": "c",
        "fshader.h": "c",
        "game_manager.h": "c",
        "player.h": "c",
        "resource.h": "c",
        "spawn.h": "c",
        "spritesheet.h": "c",
        "tilemap.h": "c",
        "user_interface.h": "c",
        "world.h": "c",
        "fstring.h": "c",
        "lexer_ini.h": "c",
        "pak_parser.h": "c",
        "app.h": "c",
        "defines.h": "c",
        "main.c": "c",
        "reasings.h": "c",
        "save_game.h": "c",
        "settings.h": "c",
        "sound.h": "c"
    },
}