{
    "workbench.colorTheme": "Monokai++ Unified",
    "editor.minimap.enabled": false,
    "files.autoSave": "onFocusChange",
    "terminal.integrated.defaultProfile.windows": "pwsh7",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "pwsh7": {
            "path": "c:/Program Files/PowerShell/7/pwsh.exe"
        }
    },
    "editor.fontFamily": "Fira Code Retina",
    "editor.fontSize": 15,
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'cv14', 'cv01', 'cv30', 'cv31'",
    "terminal.integrated.fontFamily": "IBM Plex Mono",
    "workbench.editor.showTabs": "multiple",
    "workbench.colorCustomizations": {},
    "workbench.statusBar.visible": true,
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "block",
    "window.zoomLevel": 0,
    "editor.tabCompletion": "on",
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "red",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "HACK:",
            "color": "#ff6600",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "NOTE:",
            "color": "green",
            "backgroundColor": "rgba(0,0,0,0)"
        }
    ],
    "todohighlight.defaultStyle": {
        "color": "red",
        "backgroundColor": "#ffab00",
        "overviewRulerColor": "rgba(0,0,0,0)",
        "isWholeLine": false,
    },
    "files.associations": {
        "event.h": "c",
        "fmath.h": "c",
        "fmemory.h": "c",
        "ftime.h": "c",
        "window.h": "c",
        "ability.h": "c",
        "camera.h": "c",
        "game_manager.h": "c",
        "player.h": "c",
        "resource_manager.h": "c",
        "resource.h": "c",
        "spawn.h": "c",
        "user_interface.h": "c",
        "app.h": "c",
        "defines.inl": "c",
        "reasings.h": "c",
    },
}