  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Windows)",
      "request": "launch",
      "type": "lldb",
      "program": "${workspaceFolder}/bin/Incendium.exe",
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/bin/",
    },
    {
      "name": "Launch (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Incendium",
      "args": [],
      "linux": {
        "cwd": "${workspaceFolder}/bin/",
        "stopAtEntry": false,
      },
      "osx": {
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/bin/",
      },
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing"
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
    }
  ]
}