{
    "tasks": [
        {
            "type": "shell",
            "label": "Build App",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh",
            },
            "osx": {
                "command": "${workspaceFolder}/build-all-macos.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "close": false
            }
        }
    ],
    "version": "2.0.0"
}